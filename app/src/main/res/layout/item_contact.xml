<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="contact"
            type="sk.oceliak.promo.model.api.models.Contact" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <ImageView
            app:imageUrl="@{contact.pictureUrl}"
            android:id="@+id/contact_image"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:background="@color/cardview_dark_background"
            android:contentDescription="@string/card_image_desc" />

        <TextView
            android:id="@+id/title"
            android:text="@{contact.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/contact_image"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_toEndOf="@+id/contact_image"
            android:layout_toRightOf="@+id/contact_image"
            android:textSize="@dimen/textL"
            android:textStyle="bold"
            tools:text="Jaro Novak" />

        <TextView
            android:id="@+id/subtitle"
            android:text="@{contact.phone}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/contact_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_toEndOf="@id/contact_image"
            android:layout_toRightOf="@+id/contact_image"
            tools:text="0902 286 298" />

        <View
            style="@style/Divider"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/contact_image"
            android:layout_marginTop="@dimen/margin_small" />

    </RelativeLayout>
</layout>